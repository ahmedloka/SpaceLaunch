<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activites.DetailsActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:contentDescription="@string/launch_img"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:src="@color/pdlg_color_black" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <my.apps.udacity.nano.degree.space.launch.utilites.CairoBoldTextView
                    android:id="@+id/launch_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textAllCaps="true"
                    android:textColor="@color/pdlg_color_white"
                    android:textSize="@dimen/_16ssp" />

                <my.apps.udacity.nano.degree.space.launch.utilites.CairoRegularTextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/pdlg_color_white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="#000000" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linear_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:visibility="visible">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <my.apps.udacity.nano.degree.space.launch.utilites.CairoBoldTextView
                            android:id="@+id/txt_days"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="00"
                            android:textColor="@color/pdlg_color_white"
                            android:textSize="@dimen/_10ssp" />

                        <my.apps.udacity.nano.degree.space.launch.utilites.CairoBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/days"
                            android:textColor="@color/pdlg_color_white"
                            android:textSize="@dimen/_8ssp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <my.apps.udacity.nano.degree.space.launch.utilites.CairoBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:gravity="top|center"
                        android:text=":"
                        android:textColor="@color/pdlg_color_white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <my.apps.udacity.nano.degree.space.launch.utilites.CairoBoldTextView
                            android:id="@+id/txt_hrs"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="00"
                            android:textColor="@color/pdlg_color_white"
                            android:textSize="@dimen/_8ssp" />

                        <my.apps.udacity.nano.degree.space.launch.utilites.CairoBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/hrs"
                            android:textColor="@color/pdlg_color_white"
                            android:textSize="@dimen/_10ssp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <my.apps.udacity.nano.degree.space.launch.utilites.CairoBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"

                        android:layout_weight="0.2"
                        android:gravity="top|center"
                        android:text=":"
                        android:textColor="@color/pdlg_color_white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <my.apps.udacity.nano.degree.space.launch.utilites.CairoBoldTextView
                            android:id="@+id/txt_mins"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:layout_weight="1"

                            android:gravity="center"
                            android:text="00"
                            android:textColor="@color/pdlg_color_white"
                            android:textSize="@dimen/_10ssp" />

                        <my.apps.udacity.nano.degree.space.launch.utilites.CairoBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/mins"
                            android:textColor="@color/pdlg_color_white"
                            android:textSize="@dimen/_8ssp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <my.apps.udacity.nano.degree.space.launch.utilites.CairoBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:gravity="top|center"
                        android:text=":"
                        android:textColor="@color/pdlg_color_white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <my.apps.udacity.nano.degree.space.launch.utilites.CairoBoldTextView
                            android:id="@+id/txt_secs"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="00"
                            android:textColor="@color/pdlg_color_white"
                            android:textSize="@dimen/_10ssp" />

                        <my.apps.udacity.nano.degree.space.launch.utilites.CairoBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/secs"
                            android:textColor="@color/pdlg_color_white"
                            android:textSize="@dimen/_8ssp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <my.apps.udacity.nano.degree.space.launch.utilites.CairoRegularTextView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/view_on_map" />

                <my.apps.udacity.nano.degree.space.launch.utilites.CairoRegularTextView
                    android:id="@+id/txt_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|top"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12ssp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>


</ScrollView>